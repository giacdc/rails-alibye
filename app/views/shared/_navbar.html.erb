<div class="navbar navbar-expand-sm navbar-light navbar-lewagon py-4 px-5">
  <div class="container-fluid">
    <%= link_to root_path, class:"link" do %>
      <div class="d-flex justify-content-start align-items-center py-4 px-5">
        <div id="logo"><i class="fa-solid fa-user-secret "></i></div>
        <div id="logo-text", class="mx-3">ALIBYE</div>
      </div>
    <% end %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Alibyes", alibyes_path, class: current_page?(alibyes_path) ? "nav-link me-3 active" : "nav-link me-3" %>
          </li>
          <li class="nav-item">
            <%= link_to "My bookings", bookings_path, class: current_page?(bookings_path) ? "nav-link me-3 active" : "nav-link me-3" %>
          </li>
          <li class="nav-item">
            <%= link_to "Log out", destroy_user_session_path, class: "nav-link me-3", data: {turbo_method: :delete} %>
          </li>
          <li class="nav-item ps-3">
            <%= image_tag "avatarnew.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to new_user_session_path, class: "nav-link btn btn-blue" do %>
              <span class="px-4">Login</span>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
