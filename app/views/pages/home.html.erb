<div>
  <%= render partial: "/shared/banner" %>
  <div class="cards container">
    <% Alibye.all.sample(3).each do |alibye| %>
      <div class="card-item">
        <div>
          <div class="card-image">
            <% if @alibye.photo.attached? %>
              <%= cl_image_tag @alibye.photo.key, height: 600, width: 800, crop: :fill %>
            <% else %>
              <%= image_tag "jumping.jpg", style: 'height:600px;width:800px;' %>
            <% end %>
          </div>
          <div class="card-infos">
            <div class="card-title">
              <h3 id="title"><%= alibye.title %></h3>
            </div>
            <div class="card-price">
              <p id="price"><%= alibye.price_per_hour%>â‚¬/hour</p>
            </div>
          </div>
        </div>
        <%= link_to "Check this Alibye", alibye_path(alibye), class: "btn-blue" %>
      </div>
    <% end %>
  </div>
</div>
