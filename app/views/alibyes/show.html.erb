<div class="container">
  <% if @alibye.blank? %>
  <p>There are no alibyes available.</p>
  <% else %>
  <p>ALL THE ALIBYES</p>

  <p><%= @alibye.title %></p>
  <p><%= @alibye.category %></p>
  <p><%= @alibye.description %></p>
  <p><%= @alibye.price_per_hour %></p>

  <% end %>
  <%= link_to "Back to list", alibyes_path, class: "btn btn-orange" %>
  <%= link_to "Book your alibye", new_alibye_booking_path(@alibye), class: "btn btn-orange" %>
</div>
