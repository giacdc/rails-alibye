<div>
  <%= link_to alibyes_path do %>
    <div>
      <p class="btn-back"><i class="fa-solid fa-chevron-left" style="color: #31393c; font-size: 22px"></i>  Back to the list</p>
    </div>
  <% end %>
</div>

<div class="container">
  <% if @alibye.blank? %>
    <p center>This alibye is not available.</p>
  <% else %>
    <div class="card-trip">
      <% if @alibye.photo.attached? %>
        <%= cl_image_tag @alibye.photo.key, height: 600, width: 800, crop: :fill %>
      <% else %>
        <%= image_tag "jumping.jpg", style: 'height:600px;width:800px;' %>
      <% end %>
    </div>
    <div class="card-trip-infos">
      <h3><%= @alibye.title %></h3>
      <p><em><%= @alibye.category %></em></p>
      <p><h5><%= @alibye.description %></h5></p>
    </div>
  <% end %>
  <div class="m-3">
    <em class="text-end">Price per hour:</em><h4 class="card-trip-pricing" class="text-end"><%= @alibye.price_per_hour %>â‚¬</h4>
    <%= link_to "Book this Alibye", new_alibye_booking_path(@alibye), class: "btn btn-blue" %>
    <%= link_to "Edit", edit_alibye_path, class: "btn btn-blue" %>
    <%= link_to "Delete", alibye_path(@alibye), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-orange" %>
    <br>
    <br>
  </div>
</div>
